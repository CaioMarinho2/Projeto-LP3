<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox spacing="30" alignment="CENTER"
       xmlns="http://javafx.com/javafx"
       xmlns:fx="http://javafx.com/fxml"
       fx:controller="projeto.lp3.controller.PaginaSobreNosController"
       style="-fx-background-color: #0d0d0d; -fx-padding: 40;">

       <Label text="Sobre Nós"
              style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #d7fa00;" />

       <Label
              text="Projeto para a disciplina Linguagem de Programação 3 da Universidade Federal Rural do Rio de Janeiro (UFRRJ), realizado pelos alunos do curso Sistemas de Informação: Caio Marinho dos Reis e Maria Fernanda Galdino."
              wrapText="true"
              textAlignment="CENTER"
              style="-fx-font-size: 16px; -fx-text-fill: #ffffff; -fx-alignment: center;" />

       <Button text="Voltar"
              style="-fx-background-color: #d7fa00; -fx-text-fill: #0d0d0d; -fx-font-weight: bold; -fx-padding: 10 20 10 20;"
              fx:id="btnVoltar" onAction="#voltar" />

</VBox>